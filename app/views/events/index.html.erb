<body bgcolor="#000000" background="/bg_stars.gif" text="#ff0000" link="#ff4c4c" vlink="#ff4c4c" alink="#ff4c4c">
  <center>
    <table border="1" width="900" cellpadding="30" bgcolor="000000">
      <tr>
        <td>
          <marquee><h3>Title</h3></marquee>
        </td>
        <td>
          <marquee><h3>Description</h3></marquee>
        </td>
        <td>
          <marquee><h3>Price</h3></marquee>
        </td>
      </tr>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.title, event_path(event) %></td>
          <td><%= event.description %></td>
          <td><%= event.price %></td>
        </tr>
      <% end %>
    </table>
  </center>
</body>
